pipeline {
  agent { 
        dockerfile{ 
          args '-v /home/pi/.ssh:/root/.ssh:ro'
        }
  }
  environment {
    VAULT_PW = credentials('vaultpw')
  }
  stages {
    stage('Test') {
      steps {
        script {
            env.DEFAULT_LOCAL_TMP = env.WORKSPACE_TMP
            env.HOME = env.WORKSPACE
            
            sh """
            ls -al /root/.ssh
            """

            sh """
            ansible-playbook -i inventory --vault-password-file "$VAULT_PW" site.yml --tags jenkins
            """
        }
      }
    }
  }
}