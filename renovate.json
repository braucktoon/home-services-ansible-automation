{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/)(?:docker-)?compose[^/]*\\.ya?ml(\\.j2)?$"
      ],
      "matchStrings": [
        "image:\\s*(?<depName>[\\w./-]+)(?::(?<currentValue>[\\w.-]+))?(?:@(?<currentDigest>sha256:[a-f0-9]{64}))?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["lscr.io/linuxserver/plex"],
      "versioning": "loose"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["lscr.io/linuxserver/prowlarr"],
      "versioning": "loose"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["lscr.io/linuxserver/sonarr"],
      "versioning": "loose"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["lscr.io/linuxserver/sabnzbd"],
      "versioning": "loose"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["lscr.io/linuxserver/radarr"],
      "versioning": "loose"
    },
    {
      "matchUpdateTypes": ["patch", "minor", "digest"],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ],
  "platformAutomerge": true
}
