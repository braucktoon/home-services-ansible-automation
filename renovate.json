{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["(^|/)(?:docker-)?compose[^/]*\\.ya?ml(\\.j2)?$"],
      "matchStrings": [
        "image:\\s*(?<depName>[\\w./-]+)(?::(?<currentValue>[\\w.-]+))?(?:@(?<currentDigest>sha256:[a-f0-9]{64}))?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    /* linuxserver stack â€” allow only stable tags */
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": [
        "^lscr\\.io/linuxserver/(sonarr|radarr|prowlarr|sabnzbd)$"
      ],
      "versioning": "loose",
      "allowedVersions": "/^(?!.*(?:nightly|develop|preview|beta|rc)).*$/i"
    },

    /* plex & flaresolverr rules (also keep to stable) */
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["lscr.io/linuxserver/plex"],
      "versioning": "loose",
      "allowedVersions": "/^(?!.*(?:nightly|develop|preview|beta|rc)).*$/i"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["flaresolverr/flaresolverr"],
      "versioning": "loose",
      "allowedVersions": "/^(?!.*(?:nightly|develop|preview|beta|rc)).*$/i"
    },

    /* safe auto-merge */
    {
      "matchUpdateTypes": ["patch", "minor", "digest"],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ],
  "platformAutomerge": true
}
