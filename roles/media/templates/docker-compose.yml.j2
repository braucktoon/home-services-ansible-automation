version: "3.7"

networks:
  media:
    name: media
    driver: macvlan
    driver_opts:
      parent: eth0
    ipam:
      config:
        - subnet: "10.0.0.0/24"
          gateway: "10.0.0.1"

services:

  gluetun:
    image: qmcgaw/gluetun:v3.36.0
    restart: unless-stopped
    container_name: {{gluetun_container_name}}
    cap_add:
      - NET_ADMIN
    ports:
        # QBT UI Port
        - 8080:8080
        # Prowlarr port
        - 9696:9696
        # sabnzbd port
        - 9090
    environment:
      - VPN_SERVICE_PROVIDER=mullvad
      - VPN_TYPE=wireguard
      - WIREGUARD_PRIVATE_KEY={{WIREGUARD_PRIVATE_KEY}}
      - WIREGUARD_ADDRESSES=10.64.120.124/32
      - SERVER_CITIES=Zurich
    networks:
      media:
        ipv4_address: 10.0.0.3

  prowlarr:
    image: ghcr.io/onedr0p/prowlarr:1.9.4.4039
    user: "1026:100"
    restart: unless-stopped
    container_name: {{prowlarr_container_name}}
    environment:
        - TZ=America/New_York
        - PROWLARR__PORT=9696
    volumes:
      - {{docker_dir}}/{{prowlarr_container_name}}/config:/config
    network_mode: service:gluetun
    depends_on:
      - gluetun
      - qbittorrent
      - sabnzbd

  qbittorrent:
    container_name: {{qbt_container_name}}
    user: "1026:100"
    restart: unless-stopped
    image: ghcr.io/onedr0p/qbittorrent:4.6.1
    environment:
      - QBITTORRENT__PORT=8080
    volumes:
      - {{docker_dir}}/{{qbt_container_name}}/config:/config
      - {{docker_dir}}/{{torrent_downloads}}:/torrent-downloads
    network_mode: service:gluetun

  portainer-agent:
    image: portainer/agent:2.19.2
    restart: unless-stopped
    ports:
      - "9001:9001"
    volumes:
      - /volume1/@docker/volumes:/var/lib/docker/volumes
      - /var/run/docker.sock:/var/run/docker.sock:ro

  sonarr:
      container_name: {{sonarr_container_name}}
      image: ghcr.io/onedr0p/sonarr:3.0.10.1567
      user: "1026:100"
      environment:
        - SONARR__PORT=8989
        - SONARR__APPLICATION_URL="https://sonarr.mchouseface.com/"
        - TZ=America/New_York
      volumes:
        - {{docker_dir}}/{{sonarr_container_name}}/config:/config
        - {{plex_tv_dir}}:/tv
        - {{docker_dir}}/{{torrent_downloads}}:/torrent-downloads
        - {{docker_dir}}/{{nzb_downloads}}:/nzb-downloads
      ports:
        - 8989:8989
      networks:
        media:
          ipv4_address: 10.0.0.11
  
  sabnzbd:
      container_name: {{sabnzbd_container_name}}
      image: ghcr.io/onedr0p/sabnzbd:4.1.0
      user: "1026:100"
      environment:
        - SABNZBD__PORT=9090
      volumes:
        - {{docker_dir}}/{{sabnzbd_container_name}}/config:/config
        - {{docker_dir}}/{{nzb_downloads}}:/nzb-downloads
        - {{docker_dir}}/{{nzb_incomplete_downloads}}:/nzb-incomplete-downloads
        - {{sabnzbd_backup_dir}}:/backups
      networks:
        media:
          ipv4_address: 10.0.0.12

  radarr:
      container_name: {{radarr_container_name}}
      image: ghcr.io/onedr0p/radarr:5.1.3.8246
      user: "1026:100"
      environment:
        - RADARR__PORT=7878
      volumes:
        - {{docker_dir}}/{{radarr_container_name}}/config:/config
        - {{plex_movies_dir}}:/movies
        - {{docker_dir}}/{{torrent_downloads}}:/torrent-downloads
        - {{docker_dir}}/{{nzb_downloads}}:/nzb-downloads
      networks:
        media:
          ipv4_address: 10.0.0.13
